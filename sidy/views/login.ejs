<body>
	<style type="text/css">
		
	</style>
	<h1 class="text-logo-admin" style="font-family: 'Luckiest Guy', cursive !important">
						House Burger
					</h1>
	<div class="container login">
		
				<% if(message.length >  0) { %>
				<div class="alert alert-danger"><%=message %></div>
				<% } %>
				<form class="form" id="login-form" method="post" action="/login" role="form" style="font-family: 'Montserrat'">
					
					<div class="form-group">
						<label for="username">Nom d'utilisateur :</label>
						<input type="text" name="username" id="username" placeholder="entrer votre username" class="form-control" value="">
						<p class="help-inline" id="usernameError"></p>
					</div>
					<div class="form-group">
						<label for="password">Mot de passe</label>
						<input type="password" name="password" id="password" class="form-control">
						<p class="help-inline" id="passwordError"></p>
					</div>
					<div class="form-actions">
						<button type="submit" class="btn btn-success">Se connecter</button>
					</div>
				</form>
			
		
	</div>

	<script type="text/javascript">



	</script>

	<footer>
		<span class="Copyright"><p><script>document.write(new Date().getFullYear());</script> Copyright | GBELIA Fabrice</p></span>
	</footer>


</body>


